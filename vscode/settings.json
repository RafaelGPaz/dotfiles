    // Place your settings in this file to overwrite the default settings
{
// Breadcrumbs
    "breadcrumbs.enabled": true,
// Editor
    "editor.fontFamily": "'Hack', 'LiberationMono'",
    "editor.fontSize": 14,
    "editor.cursorBlinking": "solid",
    "editor.letterSpacing": 0.5,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "alt",
    "editor.quickSuggestions": {
      "other": false,
      "comments": false,
      "strings": false
    },
    "editor.tokenColorCustomizations": {
        "[Material Theme Darker High Contrast]": {
            "comments": "#777"
        },
    },
    "editor.wordBasedSuggestions": true,
    "editor.wordSeparators": "`~!@#$%^&*()-_=+[{]}\\|;:'\",.<>/?",
    "editor.wordWrap": "on",
// Emmet
    "emmet.includeLanguages": {"jinja-html": "html"},
// Empty Indent
    "emptyIndent.removeIndent": false,// Explorer
    "explorer.confirmDelete": false,
// Extensions
    "extensions.autoUpdate": true,
// Files
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.jpg": true,
        "**/*.png": true,
        "**/*.gif": true,
        "**/*.tif": true,
        "**/*.psd": true,
        "**/*.psb": true,
        "**/*.swf": true
    },
    "files.trimTrailingWhitespace": true,
// Git,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.ignoredRepositories": [
        "/Users/rafael/dotfiles/dotbot",
        "/Users/rafael/dotfiles/bin/clustergit"
    ],
    "git.path": "/usr/bin/git",
// Gitlens
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.currentLine.enabled": false,
    "gitlens.views.fileHistory.avatars": false,
    "gitlens.views.lineHistory.avatars": false,
    "gitlens.views.compare.files.layout": "tree",
    "gitlens.views.search.files.layout": "tree",
// Integrated Terminal
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.letterSpacing": 0.5,
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\system32\\WindowsPowershell\\v1.0\\powershell.exe",
// Material Theme
    "materialTheme.accent": "Acid Lime",
    "materialTheme.autoApplyIcons": false,
// Powershell
    "powershell.integratedConsole.showOnStartup": false,
// Window
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 0,
    // Workbench
    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "Material Theme Darker High Contrast",
    "workbench.editor.labelFormat": "long",
    "workbench.colorCustomizations": {
        "activityBarBadge.background": "#C6FF00",
        "breadcrumb.activeSelectionForeground": "#C6FF00",
        "editor.background": "#1A1A1A",
        "editor.lineHighlightBackground": "#2A2A2A",
        "editor.selectionBackground": "#5E1F39",
        "editor.selectionHighlightBackground": "#5E1F39",
        "editorSuggestWidget.foreground": "#CCCCCC",
        "editorSuggestWidget.highlightForeground": "#C6FF00",
        "editorSuggestWidget.selectedBackground": "#5A5E1F",
        "editorWidget.border": "#C6FF00",
        "editorWidget.resizeBorder": "#C6FF00",
        "list.activeSelectionBackground": "#005F5F",
        "list.activeSelectionForeground": "#C6FF00",
        "list.highlightForeground": "#C6FF00",
        "list.inactiveSelectionBackground": "#2A2A2A",
        "list.inactiveSelectionForeground": "#C6FF00",
        "menu.selectionForeground": "#C6FF00",
        "menubar.selectionForeground": "#C6FF00",
        "notificationLink.foreground": "#C6FF00",
        "panelTitle.activeBorder": "#C6FF00",
        "pickerGroup.foreground": "#C6FF00",
        "progressBar.background": "#C6FF00",
        "scrollbarSlider.activeBackground": "#C6FF0050",
        "settings.headerForeground": "#C6FF00",
        "settings.modifiedItemIndicator": "#C6FF00",
        "statusBar.foreground": "#CCCCCC",
        "statusBar.background": "#111111",
        "statusBar.debuggingBackground": "#5F0000",
        "sideBar.foreground": "#CCCCCC",
        "tab.activeBorder": "#C6FF00",
        "tab.activeForeground": "#C6FF00",
        "textLink.foreground": "#C6FF00"
    },
// Vim
"vim.disableExtension": false,
    "vim.easymotion": true,
    "vim.easymotionMarkerFontSize": "17",
    "vim.easymotionMarkerHeight": 17,
    "vim.easymotionMarkerFontFamily": "Arial",
    "vim.easymotionMarkerBackgroundColor": "indigo",
    "vim.easymotionMarkerForegroundColorOneChar": "white",
    "vim.easymotionMarkerForegroundColorTwoChar": "yellow",
    "vim.easymotionKeys": "hklyuiopnmqwertzxcvbasdgjf",
    "vim.easymotionMarkerYOffset": 3,
    "vim.enableNeovim": true,
    "vim.handleKeys": {
      "<C-n>": false
    },
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.neovimPath": "/usr/local/bin/nvim",
    "vim.statusBarColorControl": false,
    "vim.useSystemClipboard": true,
    "vim.visualstar": true,
    "vim.insertModeKeyBindings": [
        // Bind jj to <Esc>
        {
            "before": ["j","j"],
            "after": ["<Esc>"]
        },
        // Bind jw to <Esc> and save
        {
            "before": ["j","w"],
            "after": ["<Esc>"],
            "commands": ["workbench.action.files.save"]
        },
    ],
    "vim.normalModeKeyBindings": [
        // Save document
        {
            "before": ["leader", "w"],
            "commands": [
                "workbench.action.files.save",
            ]
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        // Switch previous buffer
        {
            "before": ["<leader>", "p"],
            "commands": ["workbench.action.openNextRecentlyUsedEditorInGroup", "list.select"]
        },
        // Open file in project
        {
            "before": ["<leader>", "b"],
            "commands": ["workbench.action.quickOpen"]
        },
        // Switch to open buffers
        {
            "before": ["<leader>", "B"],
            "commands": ["workbench.action.openNextRecentlyUsedEditorInGroup"]
        },
        // Open VSCode Palette with colon
        {
            "before": [":"],
            "commands": ["workbench.action.showCommands"]
        },
        //  Toggle comment
		{
            "before": ["<leader>","c","c"],
            "commands": ["editor.action.commentLine"]
        },
        // Turn off search highlight
        {
            "before":["<C-c>"],
            "commands": [":nohl"]
        },
        // Delete line last character
        {
            "before": ["<leader>", "x"],
            "commands": ["macros.deleteLastChar"]
        },
        // Fix undo bug
        {
            "before": ["u"],
            "commands": ["undo"]
        },
        {
            "before": ["<C-r>"],
            "commands": ["redo"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        // Indent/outdent lines (repeatable)
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        },
    ],
    "macros": {
        "deleteLastChar": [
            "extension.vim_end",
            "extension.vim_delete"
        ]
    }
}