    // Place your settings in this file to overwrite the default settings
{
// Breadcrumbs
    "breadcrumbs.enabled": true,
// Editor
    "editor.fontFamily": "'Hack', 'LiberationMono'",
    "editor.fontSize": 13,
    "editor.cursorBlinking": "solid",
    "editor.letterSpacing": 0.5,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "alt",
    "editor.tokenColorCustomizations": {
        "[Material Theme Darker High Contrast]": {
            "comments": "#777"
        },
    },
    "editor.wordBasedSuggestions": true,
    "editor.wordSeparators": "`~!@#$%^&*()-_=+[{]}\\|;:'\",.<>/?",
    "editor.wordWrap": "on",
// Empty Indent
    "emptyIndent.removeIndent": false,// Explorer
    "explorer.confirmDelete": false,
// Extensions
    "extensions.autoUpdate": true,
// Files
    "files.associations": {
        "*.xml": "krpano"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.jpg": true,
        "**/*.png": true,
        "**/*.gif": true,
        "**/*.tif": true,
        "**/*.psd": true,
        "**/*.psb": true,
        "**/*.swf": true
    },
    "files.trimTrailingWhitespace": true,
// Git,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.ignoredRepositories": [
        "/Users/rafael/dotfiles/dotbot",
        "/Users/rafael/dotfiles/bin/clustergit"
    ],
    "git.path": "/usr/bin/git",
// Gitlens
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": true
    },
    "gitlens.currentLine.enabled": false,
    "gitlens.historyExplorer.avatars": false,
    "gitlens.resultsExplorer.files.layout": "tree",
// Integrated Terminal
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.letterSpacing": 0.5,
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\system32\\WindowsPowershell\\v1.0\\powershell.exe",
// Material Theme
    "materialTheme.accentPrevious": "Lime",
    "materialTheme.accent": "Acid Lime",
    "materialTheme.autoApplyIcons": false,
// Powershell
    "powershell.integratedConsole.showOnStartup": false,
// Window
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 0,
// Workbench
    "workbench.colorTheme": "Material Theme Darker High Contrast",
    "workbench.editor.labelFormat": "long",
    "workbench.colorCustomizations": {
        "activityBarBadge.background": "#C6FF00",
        "editor.lineHighlightBackground": "#393939",
        "editor.selectionBackground": "#5e1f39",
        "editor.selectionHighlightBackground": "#5a5e1f",
        "editorSuggestWidget.highlightForeground": "#C6FF00",
        "editorWidget.border": "#C6FF00",
        "editorWidget.resizeBorder": "#C6FF00",
        "list.activeSelectionForeground": "#C6FF00",
        "list.highlightForeground": "#C6FF00",
        "list.inactiveSelectionForeground": "#C6FF00",
        "editorSuggestWidget.selectedBackground": "#5a5e1f",
        "editorSuggestWidget.foreground": "#ccc",
        "notificationLink.foreground": "#C6FF00",
        "panelTitle.activeBorder": "#C6FF00",
        "pickerGroup.foreground": "#C6FF00",
        "progressBar.background": "#C6FF00",
        "scrollbarSlider.activeBackground": "#C6FF0050",
        "settings.modifiedItemForeground": "#C6FF00",
        "sideBar.foreground": "#ccc",
        "statusBar.background": "#111",
        "statusBar.debuggingBackground": "#005f5f",
        "statusBar.foreground": "#ccc",
        "statusBar.noFolderBackground": "#005f5f",
        "tab.activeBorder": "#C6FF00",
        "textLink.foreground": "#C6FF00",
    },
// Vim
    "vim.cmdLineInitialColon": true,
    "vim.disableExtension": true,
    "vim.easymotion": true,
    "vim.easymotionMarkerFontSize": "15",
    "vim.easymotionMarkerBackgroundColor": "#1e1e1e",
    "vim.easymotionMarkerForegroundColorOneChar": "yellow",
    "vim.enableNeovim": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.neovimPath": "/usr/local/bin/nvim",
    "vim.statusBarColorControl": true,
    "vim.statusBarColors": {
        "normal": "#005f5f",
        "insert": "#5f0000",
        "visual": "#5f00af",
        "visualline": "#005f87",
        "visualblock": "#86592d",
        "replace": "#000000"
    },
    "vim.useSystemClipboard": true,
    "vim.visualstar": true,
    "vim.insertModeKeyBindings": [
        // Bind jj to <Esc> in insert mode:
        {
            "before": ["j","j"],
            "after": ["<Esc>"]
        },
    ],
    "vim.otherModesKeyBindingsNonRecursive": [
        // Open VSCode Palette with colon
        {
            "before": [":"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.showCommands",
                    "args": []
                }
            ]
        },
        // Open Vim Palette with <SPACE> colon
        {
            "before": ["<leader>", ":"],
            "after": [],
            "commands": [
                {
                    "command": "extension.showCmdLine",
                    "args": []
                }
            ]
        },
        // Delete line last character
        {
            "before": ["<leader>", "x"],
            "after": [],
            "commands": [
                {
                    "command":"macros.deleteLastChar"
                }
            ]
        },
        // Toggle comment
		{
            "before": ["<leader>","c","c"],
            "after": [],
            "commands": [
                {
                    "command": "editor.action.commentLine"
                }
            ]
        },
    ],
    "macros": {
        "deleteLastChar": [
            "extension.vim_end",
            "extension.vim_delete"
        ]
    }
}